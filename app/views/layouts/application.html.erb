<!DOCTYPE html>
<html>
  <head>
    <title>BonAppetizers</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


        <div id="sidebar">

          <div id="sidebardiv">
            <%= image_tag("cater.png", :alt => "rss feed") %>
            <%= link_to "Home", "/" %><br>
            <%= link_to "Services", "/products"%>
          </div>
          <%= flash[:alert] %>
          <%= flash[:notice] %>
        </div>

        <div id="header">
          <h1>Bon Appetizers Catering Services</h1>
        </div>

        <div id="background">

        </div>

        <div id="content">
          <%= yield %>
        </div>

        <div id="footer">
          <% if current_user %>
            <%= current_user.email %> | <%= link_to "Sign out", '/signout' %>
          <% else %>
            <%= link_to "Sign up", 'signup' %> | <%= link_to "Sign in", '/signin' %>
          <% end %>
        </div>







  </body>
</html>
